<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".WarenRvFrag">

    <android.support.v7.widget.Toolbar
            android:id="@+id/waren_rv_frag_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_höhe"
            android:background="?attr/colorPrimary">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waren_toolbar_titel"/>
    </android.support.v7.widget.Toolbar>
    <!-- eventuell löschen -->
    <TextView
            android:id="@+id/waren_rv_frag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="waren fragment"/>
    <TextView
            android:id="@+id/waren_rv_frag_lbl_laden_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="laden id: "/>
    <TextView
            android:id="@+id/waren_rv_frag_TV_laden_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <!-- eventuell löschen -->
    <FrameLayout
            android:id="@+id/waren_rv_frag_rv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rand"
            android:layout_margin="@dimen/rand_freiraum">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/waren_rv_frag_rv_element"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rv_frag_höhe"
                android:layout_margin="@dimen/rand_freiraum"/>
        <TextView
                android:id="@+id/waren_rv_frag_empty_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rand_freiraum"
                android:text="@string/es_gibt_keine_waren"/>
    </FrameLayout>
</LinearLayout>